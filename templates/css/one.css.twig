body {
    color: #fff;
}
article {
    position: relative;
}
article .bg {
    overflow: hidden;
    position: absolute;
    min-height: 100%;
    width: 100%;
}
#one {

}
#one>.bg {
    background: #422651; /* Old Browsers */
    background: -webkit-linear-gradient(top,#422651,#553d7c); /*Safari 5.1-6*/
    background: -o-linear-gradient(top,#422651,#553d7c); /*Opera 11.1-12*/
    background: -moz-linear-gradient(top,#422651,#553d7c); /*Fx 3.6-15*/
    background: linear-gradient(to bottom, #422651, #553d7c); /*Standard*/
}

#one>.bg>div {
    position: absolute;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-position: center bottom;
}
#one>.bg>div.s1 {
    background-image: url(img/s1.svg);
    z-index: 3;
}
#one>.bg>div.s2 {
    background-image: url(img/s2.svg);
    z-index: 1;
}
#one>.container{
    position: relative;
    z-index: 99;
}
article h3{
    padding-top: 60px;
}
article p{
    padding-top: 25px;
    font-style: italic;
}
article div.link{
    margin: 25px 0;
}
article a.link{
    background: #ffd248;
    color: #422651;
    border-radius: 20px;
    padding: 10px;
    font-size: 15px;
    text-transform:uppercase;
    text-decoration: none;
}
article#one a.link{
    -webkit-box-shadow: 0px 0px 15px 0px #ffd248;
    -moz-box-shadow:    0px 0px 15px 0px #ffd248;
    box-shadow:         0px 0px 15px 0px #ffd248;
}
.navbar a{
    color: #FFFFFF;
}
.navbar li.active a{
    color: #ffd248;
    font-weight: bold;
}
#one div.iphone{
    z-index: 2;
    position: absolute;
    perspective: 1000px;
    -webkit-perspective: 1000px;
    perspective-origin: 50% 50%;
    -webkit-perspective-origin: 50% 50%;
    left: 60%;
    max-width: 350px;
    top: 120px;
}
#one img.iphone{
    width: 100%;
    transform: rotateY(-15deg);
}