{% extends 'admin/base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container">
        {% include 'admin/nav.html.twig' %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Имя</th>
                <th scope="col">Телефон</th>
                <th scope="col">Дата</th>
            </tr>
            </thead>
            <tbody>
            {% for call in calls %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ call.name }}</td>
                    <td>{{ call.phone }}</td>
                    <td>{{ call.datetime.format('H:m:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}