{% extends 'admin/base.html.twig' %}

{% block body %}
    <form class="form-signin" action="{{ path('login') }}" method="post">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label class="sr-only" for="username">Username:</label>
        <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Логин" required autofocus />
        <label class="sr-only" for="password">Password:</label>
        <input class="form-control" type="password" id="password" name="_password"  placeholder="Пароль" required />
        <button class="btn btn-lg btn-primary btn-block" type="submit">login</button>
    </form>
{% endblock %}